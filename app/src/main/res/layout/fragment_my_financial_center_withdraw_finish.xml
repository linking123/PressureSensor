<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="@dimen/font_10"
            android:layout_marginTop="@dimen/space_30"
            android:src="@drawable/withdraw_submit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现申请已提交"
            android:textColor="@color/black"
            android:textSize="@dimen/font_20" />

    </LinearLayout>

    <View
        android:id="@+id/line1"
        style="@style/h_line_master"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginTop="@dimen/space_5"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_account_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:lines="1"
                android:maxWidth="200dp"
                android:textSize="@dimen/font_16"
                tools:text="银行卡银行卡" />

            <TextView
                android:id="@+id/tv_account_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_15"
                android:paddingBottom="@dimen/space_10"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16"
                tools:text="6265455658451255" />

        </LinearLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="@dimen/space_1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="?attr/lineColor" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginTop="@dimen/space_5"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现金额"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_15"
                android:paddingBottom="@dimen/space_10"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16"
                tools:text="￥1000" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/line3"
        style="@style/h_line_master" />

    <Button
        android:id="@+id/btn_my_financial_center_withdraw_finish"
        style="@style/button_common_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:paddingBottom="@dimen/font_10"
        android:paddingTop="@dimen/font_10"
        android:text="完 成"
        android:textColor="@color/white"
        android:textSize="@dimen/font_18" />


</LinearLayout>