<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_item_list"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="8"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/space_5"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_master_technician_qualifica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_5"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginTop="@dimen/space_10"
                android:text="服务类别"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginTop="@dimen/space_5"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkbox_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="false"
                    android:drawableLeft="@drawable/btn_check"
                    android:drawablePadding="@dimen/space_5"
                    android:text="汽车维修" />

                <CheckBox
                    android:id="@+id/checkbox_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="false"
                    android:drawableLeft="@drawable/btn_check"
                    android:drawablePadding="@dimen/space_5"
                    android:text="保养维护" />

                <CheckBox
                    android:id="@+id/checkbox_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="false"
                    android:drawableLeft="@drawable/btn_check"
                    android:drawablePadding="@dimen/space_5"
                    android:text="美容装饰" />

                <CheckBox
                    android:id="@+id/checkbox_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="false"
                    android:drawableLeft="@drawable/btn_check"
                    android:drawablePadding="@dimen/space_5"
                    android:text="安装改装" />

            </LinearLayout>

            <View
                android:id="@+id/v_line222"
                style="@style/v_line"
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_marginTop="10px"
                android:background="@color/list_divider_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_5"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_5"
                android:layout_marginTop="@dimen/space_10"
                android:text="服务车型"
                android:textColor="@color/black"
                android:textSize="@dimen/font_18" />

            <include layout="@layout/fragment_car_model" />

            <View
                android:id="@+id/v_line22"
                style="@style/v_line"
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_marginTop="10px"
                android:background="@color/list_divider_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView52"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_5"
                    android:layout_marginLeft="@dimen/space_15"
                    android:layout_marginRight="@dimen/space_5"
                    android:layout_marginTop="@dimen/space_10"
                    android:text="预约时间"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_18" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_date_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_20"
                        android:layout_marginStart="@dimen/space_20"
                        android:drawableLeft="@drawable/finger_click"
                        android:drawablePadding="@dimen/space_3"
                        android:text="请选择日期" />

                    <TextView
                        android:id="@+id/tv_time_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_10"
                        android:layout_marginStart="@dimen/space_10"
                        android:drawableLeft="@drawable/finger_click"
                        android:drawablePadding="@dimen/space_3"
                        android:text="请选择时间" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/v_line2"
                style="@style/v_line"
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_marginTop="10px"
                android:background="@color/list_divider_color" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_5"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_5"
                android:layout_marginTop="@dimen/space_10"
                android:text="服务位置"
                android:textColor="@color/black"
                android:textSize="@dimen/font_18" />

            <EditText
                android:id="@+id/et_server_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_5"
                android:layout_marginTop="@dimen/space_5"
                android:background="@null"
                android:drawableLeft="@drawable/location_32"
                android:drawablePadding="@dimen/space_5"
                android:textSize="@dimen/font_14"
                tools:text="安徽省合肥市蜀山区高新区长江西路188号" />

            <View
                android:id="@+id/v_line4"
                style="@style/v_line"
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_marginTop="10px"
                android:background="@color/list_divider_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_5"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_5"
                android:layout_marginTop="@dimen/space_10"
                android:text="需求描述"
                android:textColor="@color/black"
                android:textSize="@dimen/font_18" />

            <EditText
                android:id="@+id/et_demand_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_5"
                android:background="@null"
                android:gravity="top"
                android:hint="需求描述越详细，技师更快更精准的提供服务"
                android:lines="3"
                android:textSize="@dimen/font_14" />

            <View
                android:id="@+id/v_line6"
                style="@style/v_line"
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_marginTop="10px"
                android:background="@color/list_divider_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_5"
                    android:layout_marginLeft="@dimen/space_15"
                    android:layout_marginRight="@dimen/space_5"
                    android:layout_marginTop="@dimen/space_10"
                    android:text="附件上传"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_18" />

                <ImageButton
                    android:id="@+id/upload_img"
                    android:layout_width="65dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/space_15"
                    android:background="@null"
                    android:src="@drawable/camera_35_35" />

            </RelativeLayout>

            <com.suncreate.pressuresensor.meidia.TweetPicturesPreviewer
                android:id="@+id/recycler_images"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/lay_12"
                android:paddingLeft="@dimen/lay_12"
                android:paddingRight="@dimen/lay_12"
                android:paddingTop="@dimen/lay_12" />

        </LinearLayout>
    </ScrollView>

    <!-- 悬浮按钮 -->
    <Button
        android:id="@+id/btn_publish"
        style="@style/button_common_blue"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:text="@string/requirement_publish_immediate" />

</LinearLayout>

