<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_item_list">

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_10"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginTop="@dimen/space_10"
            android:textColor="@color/label_red"
            android:textSize="@dimen/font_16"
            tools:text="已接单" />

        <Button
            android:id="@+id/tv_taked_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/space_10"
            android:background="@drawable/btn_red_selector"
            android:padding="@dimen/space_6"
            android:text="订单信息"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14" />

    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/rl_1"
        android:layout_marginBottom="1px"
        android:background="@color/lightblue" />

    <ScrollView
        android:id="@+id/sv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginBottom="@dimen/lay_40"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/publish_time_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginTop="@dimen/font_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布时间："
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/publish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:textSize="@dimen/font_14"
                    tools:text="2016-10-20 16:22" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_order_take_time_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginTop="@dimen/font_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接单时间："
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/tv_order_take_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:textSize="@dimen/font_14"
                    tools:text="2016-10-20 16:42" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_who_take_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_5"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginTop="@dimen/font_20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接单技师/修理厂："
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/tv_who_take"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:textSize="@dimen/font_14"
                    tools:text="杨坤鹏" />

            </LinearLayout>

            <View
                android:id="@+id/v_line4"
                style="@style/v_line"
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_marginTop="10px"
                android:background="@color/list_divider_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginTop="@dimen/font_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_5"
                    android:text="预约时间："
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/tv_server_appoint_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_5"
                    android:layout_marginLeft="@dimen/space_15"
                    android:layout_marginRight="@dimen/space_5"
                    android:layout_marginTop="@dimen/space_5"
                    android:textSize="@dimen/font_14"
                    tools:text="2017-01-05 12:12:44" />

            </LinearLayout>

            <View
                android:id="@+id/v_line44"
                style="@style/v_line"
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_marginTop="10px"
                android:background="@color/list_divider_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginTop="@dimen/font_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_5"
                    android:text="服务类别："
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/tv_server_kinds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_5"
                    android:layout_marginLeft="@dimen/space_15"
                    android:layout_marginRight="@dimen/space_5"
                    android:layout_marginTop="@dimen/space_5"
                    android:textSize="@dimen/font_14"
                    tools:text="汽车维修、保养维护、美容装饰、安装改装" />

            </LinearLayout>

            <View
                android:id="@+id/v_line11"
                style="@style/v_line"
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_marginTop="10px"
                android:background="@color/list_divider_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginTop="@dimen/font_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_server_car_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务车型："
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16" />

                <!--<ImageView-->
                <!--android:id="@+id/brand_logo"-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_below="@+id/tv_server_car_model"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:src="@drawable/bmw" />-->

                <TextView
                    android:id="@+id/car_brand_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_server_car_model"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="@dimen/space_5"
                    android:textSize="@dimen/text_size_16"
                    tools:text="宝马  X5  4.0L  2016款" />

            </RelativeLayout>

            <View
                android:id="@+id/v_line2"
                style="@style/v_line"
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_marginTop="10px"
                android:background="@color/list_divider_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginTop="@dimen/font_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_5"
                    android:text="位置："
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_5"
                    android:layout_marginLeft="@dimen/space_15"
                    android:layout_marginRight="@dimen/space_5"
                    android:layout_marginTop="@dimen/space_5"
                    android:drawableLeft="@drawable/location"
                    android:drawablePadding="@dimen/space_5"
                    android:textSize="@dimen/font_14"
                    tools:text="安徽省合肥市蜀山区高新区长江西路188号" />

            </LinearLayout>

            <View
                android:id="@+id/v_line3"
                style="@style/v_line"
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_marginTop="10px"
                android:background="@color/list_divider_color" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginTop="@dimen/font_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="需求描述："
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16" />

                <TextView
                    android:id="@+id/tv_demand_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_5"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_5"
                    android:textSize="@dimen/font_14"
                    tools:text="发动机有问题发动机有问题发动机有问题发动机有问题发动机有问题发动机有问题发动机有问题" />

            </LinearLayout>

            <View
                android:id="@+id/v_line5"
                style="@style/v_line"
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_marginTop="10px"
                android:background="@color/list_divider_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginTop="@dimen/font_10"
                android:text="附件："
                android:textColor="@color/black"
                android:textSize="@dimen/font_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_3"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/space_2" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_3"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/space_2" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_3"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/space_2" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_grab_sure"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_red_selector"
        android:text="确认抢单"
        android:textSize="@dimen/font_16" />

</RelativeLayout>

