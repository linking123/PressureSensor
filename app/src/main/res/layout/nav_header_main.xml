        style="@style/UserFaceImageStyle"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_centerHorizontal="true"
        app:border_color="@color/white"
        app:border_width="2dip" />

    <TextView
        android:id="@+id/tv_user_name"
