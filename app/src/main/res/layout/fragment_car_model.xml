<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/car_brand_model_series_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_list"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/space_10"
    android:paddingRight="@dimen/space_12">

    <ImageView
        android:id="@+id/brand_icon"
        android:layout_width="24dp"
        android:layout_height="28dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_unselect_car_model" />

    <TextView
        android:id="@+id/car_brand_text"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/space_8"
        android:layout_weight="8"
        android:singleLine="true"
        android:text="当前无爱车"
        android:textSize="@dimen/text_size_15"
        tools:text="当前无爱车当前无爱车当前无爱车当前无爱车当前无爱车" />

    <TextView
        android:id="@+id/tv_choose_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:text="请选择"
        android:textColor="@color/actionbar_background"
        android:textSize="@dimen/text_size_14" />

</LinearLayout>