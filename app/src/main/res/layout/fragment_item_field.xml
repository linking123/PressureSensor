<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_list"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="8dp"
    android:visibility="visible"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_field_item_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/widget_dface" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_field_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_marginTop="@dimen/space_3"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/size_14"
                tools:text="工位名称工位名称工位名称工位名称" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_2">

                <TextView
                    android:id="@+id/tv_address1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:lines="2"
                    android:textSize="@dimen/text_size_11"
                    tools:text="黄山路与岳西路交口黄山路与山路与山路与岳西路交口黄山路与岳西路交口黄山路与岳西路交口" />

                <TextView
                    android:id="@+id/tv_field_item_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:text="4.8km"
                    android:textColor="@color/red_a400"
                    android:textSize="@dimen/text_size_11" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RatingBar
                    android:id="@+id/rb_field_item_rating"
                    style="@style/rating_bar_small_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4.2"
                    android:stepSize="0.5" />

                <TextView
                    android:id="@+id/btn_field_item_score"
                    style="@style/score_btn_styles"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/rb_field_item_rating"
                    android:text="4.1"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_field_item_station"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:text="工位数：10个"
                    android:textColor="@color/red_a400"
                    android:textSize="@dimen/text_size_11" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="1px"
        android:background="@color/list_divider_color" />

</LinearLayout>

