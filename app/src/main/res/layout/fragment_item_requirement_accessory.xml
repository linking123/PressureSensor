<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_list"
    android:orientation="vertical"
    android:visibility="visible"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_16"
        android:paddingRight="@dimen/space_16"
        android:paddingTop="@dimen/space_10">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_accessory_requirement_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2016-10-20 16:22" />

            <TextView
                android:id="@+id/tv_accessory_requirement_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/orange_700"
                tools:text="已报价" />

        </RelativeLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="1px"
            android:background="@color/list_divider_color" />

        <TextView
            android:id="@+id/tv_part_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/accessory_32"
            android:drawablePadding="@dimen/space_5"
            android:textSize="16sp"
            android:visibility="gone"
            tools:text="发动机总成（配件品类）" />

        <TextView
            android:id="@+id/tv_requirement_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/problems_32"
            android:drawablePadding="@dimen/space_5"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            tools:text="（需求描述）" />

        <TextView
            android:id="@+id/tv_car_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/model_32"
            android:drawablePadding="@dimen/space_5"
            tools:text="宝马 X5 4.0L 2016款（车型）" />

        <TextView
            android:id="@+id/tv_master_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/location_32"
            android:drawablePadding="@dimen/space_5"
            tools:text="安徽省合肥市蜀山区香樟大道185号（地址）" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/layout2"
        android:layout_marginTop="@dimen/space_6"
        android:background="@color/list_divider_color" />

    <!-- 订单状态操作按钮,包括车主端取消,技师端确认服务等-->
    <Button
        android:id="@+id/btn_operate"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/space_4"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginTop="@dimen/space_4"
        android:background="@drawable/selector_bg_border"
        android:clickable="true"
        android:gravity="center"
        android:text="取    消"
        android:textColor="@color/orange_700" />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_4"
        android:background="@color/list_divider_color" />

</LinearLayout>