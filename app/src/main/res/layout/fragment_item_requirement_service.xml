<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_list"
    android:orientation="vertical"
    android:visibility="visible"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_16"
        android:paddingRight="@dimen/space_16"
        android:paddingTop="@dimen/space_10">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2016-10-20 16:42" />

            <TextView
                android:id="@+id/service_requirement_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/orange_700"
                tools:text="已接单" />
        </RelativeLayout>
        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="1px"
            android:background="@color/list_divider_color" />
            <TextView
                android:id="@+id/tv_demand_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/problems_32"
                android:drawablePadding="@dimen/space_5"
                tools:text="发动机有问题" />

            <TextView
                android:id="@+id/tv_car_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@id/tv_demand_desc"
                android:drawableLeft="@drawable/model_32"
                android:drawablePadding="@dimen/space_5"
                tools:text="奥迪A1（进口）1.4TFSI Ego PLUS款2011款" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@id/tv_car_model"
                android:drawableLeft="@drawable/location_32"
                android:drawablePadding="@dimen/space_5"
                tools:text="安徽省合肥市蜀山区岳西路185号" />
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/layout2"
            android:layout_marginTop="@dimen/space_6"
            android:background="@color/list_divider_color" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="60dp"
                android:layout_height="24dp"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/space_4"
                android:layout_marginRight="@dimen/space_16"
                android:layout_marginTop="@dimen/space_4"
                android:background="@drawable/selector_bg_border"
                android:clickable="true"
                android:gravity="center"
                android:text="取    消"
                android:textColor="@color/orange_700" />
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_4"
        android:layout_marginBottom="1px"
        android:layout_below="@+id/layout3"
        android:background="@color/list_divider_color" />

</LinearLayout>