<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/teamlist_item_background_normal"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/rl_master_technician"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp">

            <RelativeLayout
                android:id="@+id/layout1"
                style="@style/arrow_rl_style"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/tv_icon1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/car_owner" />

                <TextView
                    android:id="@+id/role_car_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_icon1"
                    android:text="@string/change_role_car"
                    android:textSize="@dimen/font_18"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_role_car_hook"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/role_car_name"
                    android:src="@drawable/icon_role_choose" />
            </RelativeLayout>

            <View
                android:id="@+id/line1"
                style="@style/h_line_master"
                android:layout_below="@+id/layout1" />

            <RelativeLayout
                android:id="@+id/layout2"
                style="@style/arrow_rl_style"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/line1">

                <ImageView
                    android:id="@+id/tv_icon2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/service_orders" />

                <TextView
                    android:id="@+id/role_technician"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_icon2"
                    android:text="@string/change_role_technician"
                    android:textSize="@dimen/font_18"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_role_technician_hook"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/role_technician"
                    android:src="@drawable/icon_role_choose"
                    android:visibility="invisible" />
            </RelativeLayout>

            <View
                android:id="@+id/line2"
                style="@style/h_line_master"
                android:layout_below="@+id/layout2" />

            <RelativeLayout
                android:id="@+id/layout3"
                style="@style/arrow_rl_style"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/line2">

                <ImageView
                    android:id="@+id/tv_icon3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/place_orders" />

                <TextView
                    android:id="@+id/role_repair"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_icon3"
                    android:text="@string/change_role_repair"
                    android:textSize="@dimen/font_18"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_role_repair_hook"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/role_repair"
                    android:src="@drawable/icon_role_choose"
                    android:visibility="invisible" />

            </RelativeLayout>

            <View
                android:id="@+id/line3"
                style="@style/h_line_master"
                android:layout_below="@+id/layout3" />

            <View
                android:id="@+id/line4"
                style="@style/h_line_master"
                android:layout_below="@+id/layout4" />
        </RelativeLayout>

        <!--<fireiot.ui.empty.EmptyLayout-->
        <!--android:id="@+id/error_layout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:visibility="visible" />-->
    </ScrollView>
</LinearLayout>