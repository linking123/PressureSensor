<?xml version="1.0" encoding="utf-8"?>
<com.suncreate.fireiot.widget.CustomerScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="?attr/layout_item_bg"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_launcher_fireiot_fire" />

        <TextView
            android:id="@+id/tv_version_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_5"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/text_size_16" />

        <View
            style="@style/h_line"
            android:layout_marginTop="10dp" />

        <RelativeLayout
            android:id="@+id/rl_check_update"
            style="@style/option_item_rl">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/pb_loading"
                    style="@style/loading"
                    android:layout_width="18dip"
                    android:layout_height="18dip"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="false"
                    android:textColor="?attr/textColor"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                style="@style/option_item_text_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/update"
                android:textColor="?attr/textColor"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>

        <View style="@style/h_line" />

        <RelativeLayout
            android:id="@+id/rl_about"
            style="@style/option_item_rl">

            <TextView
                style="@style/option_item_text_parent"
                android:text="@string/brief_introduction"
                android:textColor="?attr/textColor"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>

        <View style="@style/h_line" />

        <RelativeLayout
            android:id="@+id/rl_user_protocal"
            style="@style/option_item_rl">

            <TextView
                style="@style/option_item_text_parent"
                android:text="@string/user_protocal"
                android:textColor="?attr/textColor"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>

        <View style="@style/h_line" />

