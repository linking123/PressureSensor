<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_master_navigate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_6"
    android:layout_marginTop="@dimen/space_6"
    android:layout_marginLeft="@dimen/space_16"
    android:layout_marginRight="@dimen/space_16"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/tv_master_technician_gps"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:src="@drawable/icon_gcoding"
        android:textColor="@color/red"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_master_field_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_master_technician_gps"
        android:layout_weight="8"
        android:textSize="14sp"
        android:singleLine="true"
        tools:text="黄山路与岳西路交叉口" />

    <TextView
        android:id="@+id/tv_master_field_gps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:layout_weight="2"
        android:text="导航>"
        android:textColor="@color/red"
        android:textSize="15sp" />


</LinearLayout>